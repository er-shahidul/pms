{% extends 'base.html.twig' %}


{% block body %}

    <!-- BEGIN PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                Document
                <small></small>
            </h3>
            <ul class="page-breadcrumb breadcrumb" style="height: 36px;">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" style="color: #333 !important;">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('document') }}" style="color: #333 !important;">Document</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li><a href="#" style="color: #333 !important;">Form</a></li>
                <li class="pull-right">
                    <div id="" class="" data-placement="" style="font-family: 'Open Sans', sans-serif; color: #f5f5f5; padding-top: 8px;text-align: center;margin-top: -8px;width: 124%;background: #e02222;height: 36px;">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </div>
                </li>
            </ul>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->

    <div class="modal-dialog" style="width: 1000px;">
        <div class="modal-content" style="background: white;">
            <div class="modal-header" style="background: lightgrey;">
                <h4 class="modal-title bold" style="text-align: center;">File Upload</h4>
            </div>
<br/>
            {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'upload-form', 'novalidate': 'novalidate'} }) }}
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                            <div class="col-md-12" style="height:70px;float:left;">
                                <div class="form-group">
                                    {{ form_label(form.invoiceOrCalan, 'Invoice/Calan :', {'label_attr': {'class': 'control-label col-md-4', 'style': 'margin-left: 44px;' } }
                                    ) }}
                                    <div class="col-md-6">
                                        <div class="input-icon">
                                            {{ form_widget(form.invoiceOrCalan, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;width: 205px;margin-left: -150px;' } }) }}
                                        </div>
                                        <span class="help-block" style="color:darkred;margin-left:-190px;">{{ form_errors(form.invoiceOrCalan) }}</span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.file, 'File Attach :', {'label_attr': {'class': 'control-label col-md-2', 'style': '' } } ) }}
                                <div class="col-md-9">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="input-group">
													<span class="input-group-btn">
													<span class="uneditable-input">
													<i class="fa fa-file fileupload-exists"></i>
													<span class="fileupload-preview"></span>
													</span>
													</span>
													<span class="btn default btn-file">
													<span class="fileupload-new"><i class="fa fa-paper-clip"></i> Select file</span>
													<span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
                                                        {{ form_widget(form.file, { 'attr': {'class': 'default'} }) }}
													</span>
                                            <a href="form_component.html#" class="btn red fileupload-exists" data-dismiss="fileupload"><i class="fa fa-trash-o"></i> Remove</a>
                                        </div>
                                    </div>
                                    <span class="help-block" style="color:darkred;margin-left:-40px;">{{ form_errors(form.file) }}</span>
                                </div>
                            </div>
                        <div class="form-group">
                            {{ form_label(form.purchaseOrder, 'Purchase Order :', {'label_attr': {'class': 'control-label col-md-4', 'style': 'margin-left: 44px;' } }
                            ) }}
                            <div class="col-md-6">
                                <div class="input-icon">
                                    {{ form_widget(form.purchaseOrder, { 'attr': {'class': 'form-control select2AutoComplete', 'style': 'padding-left: 10px !important;width: 205px;margin-left: -150px;', 'placeholder': ' Select PO' } }) }}
                                </div>
                                <span class="help-block" style="color:darkred;margin-left:-190px;">{{ form_errors(form.purchaseOrder) }}</span>
                            </div>
                        </div>
                            <div class="form-group">
                                {{ form_label(form.billNumber, 'Bill Number :', {'label_attr': {'class': 'control-label col-md-2'} }
                                ) }}
                                <div class="col-md-6">
                                    <div class="input-icon">
                                        {{ form_widget(form.billNumber, { 'attr': {'class': 'form-control col-md-4', 'style': 'padding-left: 10px !important;width: 201px;'} }) }}
                                    </div>
                                    <span class="help-block" style="color:darkred;">{{ form_errors(form.billNumber) }}</span>
                                </div>

                            </div>
                            <div class="form-group" style="margin-top:10px">
                                {{ form_label(form.dateOfBill, 'Bill Date:', {'label_attr': {'class': 'control-label col-md-2'} }
                                ) }}
                                <div class="col-md-6">
                                    <div class="input-icon">
                                        <div class="input-group input-small date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                            <span class="input-group-btn"></span>
                                            {{ form_widget(form.dateOfBill, { 'attr': {'class': 'form-control','style':'width: 201px;'} }) }}
                                        </div>
                                    </div>
                                    <span class="help-block margin-left-39" style="color:darkred;">{{ form_errors(form.dateOfBill) }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.billAmount, 'Bill Amount :', {'label_attr': {'class': 'control-label col-md-2'} }
                                ) }}
                                <div class="col-md-6">
                                    <div class="input-icon">
                                        {{ form_widget(form.billAmount, { 'attr': {'class': 'form-control col-md-4', 'style': 'padding-left: 10px !important;width: 201px;'} }) }}
                                    </div>
                                    <span class="help-block" style="color:darkred;margin-left:-40px;">{{ form_errors(form.billAmount) }}</span>
                                </div>

                            </div>


                            <div class="form-group">
                                {{ form_label(form.description, 'Remark :', {'label_attr': {'class': 'control-label col-md-2', 'style': '' } }
                                ) }}
                                <div class="col-md-8">
                                    <div class="input-icon">
                                        {{ form_widget(form.description, { 'attr': {'class': 'form-control col-md-4', 'style': 'height:72px;max-height:72px;width:615px;max-width:615px;'} }) }}
                                    </div>
                                    <span class="help-block" style="margin-left: -40px;color:darkred;">{{ form_errors(form.description) }}</span>
                                </div>
                            </div>
                    </div>
                    <br/>
                </div>
            </div>
            <div class="modal-footer" style="background: lightgrey;">
                <div class="btn-group">
                    <a href="{{ path('document') }}" class="btn" style="width: 100px;background: #0353D6; color: white !important;">
                        <i class="fa fa-ban"> Cancel</i>
                    </a>
                </div>
                {{ form_widget(form.save, { 'attr': {'class': 'btn button-width', 'style': 'width: 100px;background: #0353D6; color: white !important;'} }) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

  {% block documentready %}
      {{ parent() }}
      {#<script>#}
      $('#document_billNumber').inputmask('[9999]',{ showMaskOnFocus: true });
          var $url = Routing.generate('purchase_order_no_auto_complete');

          $(".select2AutoComplete").select2({

              ajax: {

                  url: $url,
                  dataType: 'json',
                  delay: 250,
                  data: function (params, page) {
                      return {
                          q: params,
                          page_limit: 100
                      };
                  },
                  results: function (data, page) {
                      return {
                          results: data
                      };
                  },
                  cache: true
              },
              escapeMarkup: function (m) {
                  return m;
              },
              formatResult: function (item) {
                  return item.id
              }, // omitted for brevity, see the source of this page
              formatSelection: function (item) {
                  return item.id
              }, // omitted for brevity, see the source of this page
              initSelection: function (element, callback) {
                  return callback({id: element.val()});
              },
              allowClear: true,
              minimumInputLength: 1
          });



  {% endblock %}