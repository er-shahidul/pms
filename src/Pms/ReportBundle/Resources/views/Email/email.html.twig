{% if status == 'poApprovalPending' %}
<p>Pending for Order Approval list</p>
<table>
    <thead>
    <tr>
        <th style="width:5%;">Sl</th>
        <th style="width:20%;">PO Number</th>
        <th style="width:25%;">Issue Date</th>
        <th style="width:25%;">Vendor/Buyer</th>
        <th style="width:25%;">Status</th>
    </tr>
    </thead>
    <tbody>
    {% for purchaseOrder in EmailInformation %}
        <tr>
            <td style="border: 1px solid #808080;">{{ loop.index }}.</td>
            <td style="border: 1px solid #808080;">{{ purchaseOrder.poId }}</td>
            <td style="border: 1px solid #808080;">{{ purchaseOrder.createdDate | date('d-M-Y') }}</td>
            <td style="border: 1px solid #808080;">
                {{ purchaseOrder.username ? purchaseOrder.username : purchaseOrder.vendorName }}
            </td>
            <td style="border: 1px solid #808080;">
                {% if purchaseOrder.status == 1
                and purchaseOrder.approveStatus != 1
                and purchaseOrder.approveStatus != 2
                and purchaseOrder.approveStatus != 3 %}
