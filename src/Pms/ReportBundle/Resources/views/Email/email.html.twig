<h2 class="page-title">
    Nourish purchase management system
</h2>
<style>
    table{
        width:100%;text-align: left;border: 1px solid #808080;font-family: arial,sans-serif;font-size:12px;color:#414141;border-collapse: collapse;
    }
    p{
        font-size: 20px;
        text-align: center;
        font-weight: bold;
    }
</style>
{% if status == 'prApprovalPending' %}
<p>Pending for Requisition Approval list</p>
<table>
    <thead>
    <tr>
        <th style="width:5%;">Sl</th>
        <th style="width:15%;">PR Number</th>
        <th style="width:20%;">Issue Date</th>
        <th style="width:25%;">Project Name</th>
        <th style="width:25%;">SubCategory Name</th>
        <th style="width:10%;">Status</th>
    </tr>
    </thead>
    <tbody>
    {% for purchaseRequisition in EmailInformation %}
                <tr>
                    <td style="border: 1px solid #808080;">{{ loop.index }}.</td>
                    <td style="border: 1px solid #808080;">{{ purchaseRequisition.id }}</td>
                    <td style="border: 1px solid #808080;">{{ purchaseRequisition.createdDate | date('d-M-Y') }}</td>
                    <td style="border: 1px solid #808080;">{{ purchaseRequisition.projectName }}</td>
                    <td style="border: 1px solid #808080;">{{ purchaseRequisition.subCategoryName }}</td>
                    <td style="border: 1px solid #808080;">
                        {% if purchaseRequisition.status == 1
                        and purchaseRequisition.approveStatus != 1
                        and purchaseRequisition.approveStatus != 2
                        and purchaseRequisition.approveStatus != 3 %}
                                Created
                        {% endif %}
                        {% if purchaseRequisition.status == 1
                        and purchaseRequisition.approveStatus == 1
                        and purchaseRequisition.approveStatus != 2
                        and purchaseRequisition.approveStatus != 3 %}
                                Verified
                        {% endif %}
                        {% if purchaseRequisition.status == 1
                        and purchaseRequisition.approveStatus != 1
                        and purchaseRequisition.approveStatus == 2
                        and purchaseRequisition.approveStatus != 3 %}
                                Validated
                        {% endif %}
                    </td>
                </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}
