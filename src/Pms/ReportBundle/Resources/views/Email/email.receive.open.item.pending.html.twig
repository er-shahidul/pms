<h3 class="page-title">
    NPMS
</h3>

<small> Pending open receiving item list </small>
<table style="width:100%;text-align: left;border: 1px solid #808080;font-family: arial,sans-serif;font-size:9.0pt;color:#414141">
    <thead>
    <tr>
        <th style="width:5%;">Sl</th>
        <th style="width:15%;">PO Number</th>
        <th style="width:15%;">Approval Date</th>
        <th style="width:15%;">Item Name</th>
        <th style="width:20%;">Project Name</th>
        <th style="width:20%;">SubCategory Name</th>
        <th style="width:10%;">Status</th>
    </tr>
    </thead>
    <tbody>
    {% for purchaseOrderItem in receivePending %}
        <tr>
            <td style="border: 1px solid #808080;">{{ loop.index }}.</td>
            <td style="border: 1px solid #808080;">{{ purchaseOrderItem.id }}</td>
            <td style="border: 1px solid #808080;">{{ purchaseOrderItem.approvedThreeDate | date('d-M-Y') }}</td>
            <td style="border: 1px solid #808080;">{{ purchaseOrderItem.itemName }}</td>
            <td style="border: 1px solid #808080;">{{ purchaseOrderItem.projectName }}</td>
            <td style="border: 1px solid #808080;">{{ purchaseOrderItem.subCategoryName }}</td>
            <td style="border: 1px solid #808080;">
                InProgress
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
