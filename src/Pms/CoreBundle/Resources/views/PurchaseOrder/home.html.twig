{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .popover-title {
            color: #000000;
        }
        .popover-content{
            color:#000000;
        }
        .modal-details{
            background: #35aa47;padding: 1px 5px
        }
    </style>
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                Purchase Order
                <small></small>
            </h3>
            <ul class="page-breadcrumb breadcrumb" style="height: 36px;">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" style="color: #333 !important;">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('purchase_order') }}" style="color: #333 !important;">Purchase Order</a>
                </li>
                <li class="pull-right" style="margin-right: -5px;">
                    <div data-placement="" style="font-family: 'Open Sans', sans-serif; color: #f5f5f5; padding-top: 8px;text-align: center;margin-top: -8px;width: 124%;background: #e02222;height: 36px;">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </div>
                </li>
            </ul>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->

    {{ include('::flash-message.html.twig') }}
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
            <form method="get" style="margin-bottom: 20px;margin-left: -15px;margin-top: -20px;">
                <input type="hidden" value="{{ app.request.get('month') }}" name="month">
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="input-icon right">
                            {{ form_widget(formSearch.po, { 'attr': {'class': 'form-control  fontColorBlack select2AutoComplete', 'placeholder': ' Select PO No'} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="input-icon right">
                            {{ form_widget(formSearch.poRef, { 'attr': {'class': 'form-control  fontColorBlack select2AutoRefNoComplete', 'placeholder': ' Select PO Ref. No'} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="input-icon right">
                            {{ form_widget(formSearch.vendor, { 'attr': {'class': 'form-control select2me fontColorBlack', 'placeholder': ' Select Item'} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-1">
                        <input type="submit" value="Search" class="btn blue">
                    </div>
                </div>
            </form>
            </div>

        <div class="span12">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet box">
                <div class="portlet-title">
                    <ul class="nav nav-tabs">
                        <li class="{% if status == 'all' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'all'} ) }}">All</a></li>
                        <li class="{% if status == 'open' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'open'} ) }}">Open</a></li>
                        <li class="{% if status == 'approve' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'approve'} ) }}">Approved</a></li>
                        <li class="{% if status == 'in-progress' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'in-progress'} ) }}">DIP</a></li>
                        <li class="{% if status == 'close' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'close'} ) }}">Received</a></li>
                        {% if is_granted("ROLE_SUPER_ADMIN") %}
                            <li class="{% if status == 'hold' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'hold'} ) }}">Hold</a></li>
                        {% endif %}
                        {% if is_granted("ROLE_SUPER_ADMIN") %}
                            <li class="{% if status == 'cancel' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'cancel'} ) }}">Cancel</a></li>
                        {% endif %}
                        {% if is_granted("ROLE_SUPER_ADMIN") %}
                            <li class="{% if status == 'amendment' %}active{% endif %}"><a class="tabForTable" style="color: black !important;" href="{{ path('purchase_order',{status:'amendment'} ) }}">Amendment</a></li>
                        {% endif %}
                        {% if is_granted("ROLE_PURCHASE_ORDER_ADD") or is_granted("ROLE_SUPER_ADMIN") %}
                            <li style="float: right;margin-right: -1px;">
                                <a href="{{ path('purchase_order_new') }}" style="background: #4b8df8; float: right; height: 40px; color:#ffffff; padding: 9px 14px !important;">
                                    Create PO
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>

                <div class="portlet-body flip-scroll">
                    <table class="table-bordered table-striped table-condensed flip-content responsiveDiv">
                        <thead class="flip-content"  style="background: #4b8df8">
                        <tr>
                            <th class="numeric">Sl</th>
                            <th class="numeric">{{ knp_pagination_sortable( purchaseOrders , 'Date', 'po.createdDate') }}</th>
                            <th class="numeric">{{ knp_pagination_sortable( purchaseOrders , 'PONo', 'po.id') }}</th>
                           {# {% if(status == 'amendment') %}
                            <th class="numeric">Amended PO</th>
                            {% endif %}#}
                            <th class="numeric">CompanyName</th>
                            <th class="numeric">Vendor/Buyer</th>
                            <th class="numeric">Status</th>
                            <th class="numeric">{{ knp_pagination_sortable( purchaseOrders , 'Amount', 'po.netTotal') }}</th>
                            <th class="numeric">{{ knp_pagination_sortable( purchaseOrders , 'CreatedBy', 'u.username') }}</th>
                            <th class="numeric">{{ knp_pagination_sortable( purchaseOrders , 'DeliveryDate', 'po.dateOfDelivered') }}</th>
                            <th class="numeric">Received%</th>
                            <th class="numeric">&nbsp;</th>
                            <th class="numeric">&nbsp;</th>
                            <th class="numeric">&nbsp;</th>
                            <th class="numeric">&nbsp;</th>
                            <th class="numeric">&nbsp;</th>
                        </tr>
                        </thead>
                        <tbody>

                            {% set offset = purchaseOrders.getItemNumberPerPage * (purchaseOrders.currentPageNumber - 1) %}

                            {% for purchaseOrder in purchaseOrders %}

                                {% set amendment = '' %}
                                {% set amendmentRef = '' %}
                                {% set companyName = '' %}

                                {% for purchaseOrderItem in purchaseOrder.purchaseOrderItems %}

                                    {% if purchaseOrderItem.amendment == 7 %}

                                        {% set amendment = 'amendment' %}
                                    {% endif %}

                                    {% if purchaseOrderItem.amendment == 8 %}
                                        {% set amendmentRef = 'amendmentRef' %}
                                    {% endif %}

                                    {% set companyName = purchaseOrderItem.purchaseRequisitionItem.purchaseRequisition.project.projectCategory.projectCategoryName %}

                                {% endfor %}

                                <tr>
                                    <td class="numeric">{{ loop.index + offset }}.</td>
                                    <td class="numeric">{{ purchaseOrder.createdDate|date('d M Y') }}</td>
                                    <td class="numeric">{{ purchaseOrder.id }}</td>


                                    <td class="numeric">{{ companyName }}</td>
                                    <td class="numeric">{{ purchaseOrder.vendorOrBuyer|default() }}</td>
                                    <td class="numeric">
                                        {% if purchaseOrder.status == 1
                                            and purchaseOrder.status != 5
                                            and purchaseOrder.status != 6
                                            and purchaseOrder.approveStatus != 1
                                            and purchaseOrder.approveStatus != 2
                                            and purchaseOrder.approveStatus != 3 %}
                                            <div style="text-align:center;background: #35aa47; color: #ffffff;height: 20px;">
                                                Created
                                            </div>
                                            {% if purchaseOrder.amendmentStatus == 7 %}

                                                {% if purchaseOrder.amendmentByPoNo is not null %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amended {{ purchaseOrder.amendmentByPoNo }}
                                                    </div>

                                                {% else %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                    </div>
                                                {% endif %}

                                            {% else %}
                                                <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                    {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                </div>
                                            {% endif %}

                                        {% endif %}

                                        {#{% endif %}#}
                                        {% if purchaseOrder.status == 1
                                            and purchaseOrder.approveStatus == 1
                                            and purchaseOrder.approveStatus != 2
                                            and purchaseOrder.approveStatus != 3 %}
                                            <div style="text-align:center;background: #ffb848; color: #ffffff;height: 20px;">
                                                Verified
                                            </div>

                                            {% if purchaseOrder.amendmentStatus == 7 %}

                                                {% if purchaseOrder.amendmentByPoNo is not null %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amended {{ purchaseOrder.amendmentByPoNo }}
                                                    </div>

                                                {% else %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                    </div>
                                                {% endif %}

                                            {% else %}
                                                <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                    {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                </div>
                                            {% endif %}

                                        {% endif %}
                                        {% if purchaseOrder.status == 1
                                            and purchaseOrder.approveStatus != 1
                                            and purchaseOrder.approveStatus == 2
                                            and purchaseOrder.approveStatus != 3 %}
                                            <div style="text-align:center;background: #852b99; color: #ffffff;height: 20px;">
                                                Validated
                                            </div>

                                            {% if purchaseOrder.amendmentStatus == 7 %}

                                                {% if purchaseOrder.amendmentByPoNo is not null %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amended {{ purchaseOrder.amendmentByPoNo }}
                                                    </div>

                                                {% else %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                    </div>
                                                {% endif %}

                                            {% else %}
                                                <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                    {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                </div>
                                            {% endif %}

                                        {% endif %}
                                        {% if purchaseOrder.status == 1
                                            and purchaseOrder.approveStatus != 1
                                            and purchaseOrder.approveStatus != 2
                                            and purchaseOrder.approveStatus == 3
                                            and purchaseOrder.totalOrderReceiveQuantity is null %}
                                            <div style="text-align:center;background: #555555; color: #ffffff;height: 20px;">
                                                Approved
                                            </div>
                                            {% if purchaseOrder.amendmentStatus == 7 %}

                                                {% if purchaseOrder.amendmentByPoNo is not null %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amended {{ purchaseOrder.amendmentByPoNo }}
                                                    </div>

                                                {% else %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                    </div>
                                                {% endif %}

                                            {% else %}
                                                <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                    {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                </div>
                                            {% endif %}

                                        {% endif %}
                                        {% if purchaseOrder.status == 1
                                            and purchaseOrder.approveStatus == 3
                                            and purchaseOrder.totalOrderReceiveQuantity is not null
                                            and purchaseOrder.totalOrderItemQuantity > purchaseOrder.totalOrderReceiveQuantity %}
                                            <div style="text-align:center;background: #759e1a; color: #ffffff;height: 20px;">
                                                InProgress
                                            </div>

                                            {% if purchaseOrder.amendmentStatus == 7 %}

                                                {% if purchaseOrder.amendmentByPoNo is not null %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amended {{ purchaseOrder.amendmentByPoNo }}
                                                    </div>

                                                {% else %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                    </div>
                                                {% endif %}

                                            {% else %}
                                                <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                    {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                </div>
                                            {% endif %}

                                        {% endif %}

                                        {% if purchaseOrder.status == 1
                                            and purchaseOrder.approveStatus == 3
                                            and purchaseOrder.totalOrderReceiveQuantity is not null
                                            and purchaseOrder.totalOrderReceiveQuantity >= purchaseOrder.totalOrderItemQuantity %}
                                            <div style="text-align:center;background: #759e1a; color: #ffffff;height: 20px;">
                                                Received
                                            </div>

                                            {% if purchaseOrder.amendmentStatus == 7 %}

                                                {% if purchaseOrder.amendmentByPoNo is not null %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amended {{ purchaseOrder.amendmentByPoNo }}
                                                    </div>

                                                {% else %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                    </div>
                                                {% endif %}

                                            {% else %}
                                                <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                    {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                </div>
                                            {% endif %}

                                        {% endif %}

                                        {% if status == 'hold' or status == 'all' %}
                                            {% if purchaseOrder.status == 5 %}
                                                <div style="text-align:center;background: #852b99; color: #ffffff;height: 20px;">
                                                    Hold
                                                </div>
                                                {% if purchaseOrder.amendmentStatus == 7 %}

                                                    {% if purchaseOrder.amendmentByPoNo is not null %}
                                                        <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                            Amended {{ purchaseOrder.amendmentByPoNo }}
                                                        </div>

                                                    {% else %}
                                                        <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                            Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                        </div>
                                                    {% endif %}

                                                {% else %}
                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                        {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                    </div>
                                                {% endif %}
                                            {% endif %}
                                        {% endif %}

                                        {% if status == 'cancel' or status == 'all' %}
                                            {% if purchaseOrder.status == 6 %}
                                                    {%  if purchaseOrder.approveStatus == 3 %}
                                                        <div style="text-align:center;background: #555555;color: #ffffff;height: 20px;">
                                                            ReceiveCancel
                                                        </div>
                                                        {% else %}
                                                            <div style="text-align:center;background: #555555; color: #ffffff;height: 20px;">
                                                                PO Cancel
                                                            </div>

                                                            {% endif %}
                                                                {% if purchaseOrder.amendmentStatus == 7 %}

                                                                    {% if purchaseOrder.amendmentByPoNo is not null %}
                                                                        <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                                            Amended {{ purchaseOrder.amendmentByPoNo }}
                                                                        </div>

                                                                    {% else %}
                                                                        <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                                            Amendment {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                                        </div>
                                                                    {% endif %}

                                                                {% else %}
                                                                    <div style="text-align:center; background: #696969;color: white;font-size: 10px;">
                                                                        {{ amendment }} {{ render(controller('PmsCoreBundle:PurchaseOrder:getAmendmentPo', { 'poId': purchaseOrder.id })) }}
                                                                    </div>
                                                                {% endif %}
                                            {% endif %}
                                        {% endif %}
                                        {% if purchaseOrder.isAdvancePayment == 1 %}
                                            <div style="text-align:center; background: #A66262;color: white;font-size: 10px;">advanced</div>
                                        {% endif %}
                                    </td>
                                    {#<td class="numeric">{{ purchaseOrder.netTotal|number_format(2, '.', ',') }}</td>#}
                                    <td class="numeric">{{ purchaseOrder.purchaseOrderTotalAmount|number_format(2, '.', ',') }}</td>
                                    <td class="numeric">
                                        {{ purchaseOrder.createdBy.username }}
                                    </td>
                                    <td class="numeric">
                                        {{ purchaseOrder.dateOfDelivered|date('d M Y') }}
                                    </td>
                                    <td>

                                        {% if purchaseOrder.totalOrderItemQuantity == 0 %}

                                            {% set totalOrderItemQuantity = 0 %}

                                        {% else %}
                                            {% set totalOrderItemQuantity = purchaseOrder.totalOrderItemQuantity %}
                                        {% endif %}

                                        {% if purchaseOrder.totalOrderReceiveQuantity is null %}

                                            {% set totalOrderReceiveQuantity = 0 %}
                                        {% else %}
                                            {% set totalOrderReceiveQuantity = purchaseOrder.totalOrderReceiveQuantity %}
                                        {% endif %}

                                        {% if purchaseOrder.totalOrderReceiveQuantity != 0 and purchaseOrder.status != 6 %}

                                            {% if ((totalOrderReceiveQuantity * 100) / totalOrderItemQuantity) > 100 %}
                                                {% set receivePercentage = 100 %}
                                            {% else %}
                                                {% set receivePercentage = ((totalOrderReceiveQuantity * 100) / totalOrderItemQuantity) | length > 3 ? ((totalOrderReceiveQuantity * 100) / totalOrderItemQuantity) | slice(0, 2) ~ '' : ((totalOrderReceiveQuantity * 100) / totalOrderItemQuantity) %}
                                            {% endif %}
                                        {% else %}
                                            {% set receivePercentage = 0 %}
                                            {% endif %}

                                        <div class="easy-pie-chart">
                                            {#<div class="number transactions" data-percent="{{ (totalOrderReceiveQuantity * 100) / totalOrderItemQuantity }}"><span>{{ receivePercentage }}</span>%</div>#}
                                            <div class="number transactions" data-percent="{{receivePercentage}}"><span>{{ receivePercentage }}</span>%</div>
                                        </div>
                                    </td>
                                    <td class="numeric">
                                        {% if purchaseOrder.path is not null %}
                                            <a tooltip="Vendor Quotation Attach" class="btn btn-xs" href="#" onclick="javascript: window.open('/purchase-order/attachment-view/{{ purchaseOrder.id }}/1')">
                                                <i class="fa fa-cloud-upload"></i>
                                            </a>
                                        {% else %}
                                            &ensp;
                                        {% endif %}
                                    </td>
                                    <td class="numeric">
                                        {% if purchaseOrder.pathTwo is not null %}
                                            <a tooltip="Comparison Attach" class="btn btn-xs" href="#" onclick="javascript: window.open('/purchase-order/attachment-view/{{ purchaseOrder.id }}/2')">
                                                <i class="fa fa-cloud-upload"></i>
                                            </a>
                                        {% else %}
                                            &ensp;
                                        {% endif %}
                                    </td>
                                    <td class="numeric">

                                        {% if purchaseOrder.status == 1
                                        and purchaseOrder.approveStatus == 0
                                        and ((purchaseOrder.approvedOne == null
                                        and is_granted("ROLE_PURCHASE_ORDER_APPROVE_ONE") )
                                        or (purchaseOrder.approvedOne == null
                                        and is_granted("ROLE_SUPER_ADMIN"))) %}
                                            <a href="/purchase-order/approve-one/{{ purchaseOrder.id }}"
                                               class="btn blue btn-xs confirm displayForDesktop" title="Do You Want To Approve It?"  >Approve</a>
                                            <a href="/purchase-order/approve-one/{{ purchaseOrder.id }}"
                                               class="btn blue btn-xs confirm displayForMob" style="display:none;" title="Do You Want To Approve It?"  >Approve</a>
                                        {% endif %}
                                        {% if purchaseOrder.status == 1
                                        and purchaseOrder.approveStatus == 1
                                        and ((purchaseOrder.approvedOne != null
                                        and purchaseOrder.approvedTwo == null
                                        and is_granted("ROLE_PURCHASE_ORDER_APPROVE_TWO") )
                                        or (purchaseOrder.approvedOne != null
                                        and purchaseOrder.approvedTwo == null
                                        and is_granted("ROLE_SUPER_ADMIN"))) %}
                                            <a href="/purchase-order/approve-two/{{ purchaseOrder.id }}"
                                               class="btn blue btn-xs confirm displayForDesktop" title="Do You Want To Approve It?" >Approve</a>
                                            <a href="/purchase-order/approve-two/{{ purchaseOrder.id }}"
                                               class="btn blue btn-xs confirm displayForMob" style="display:none;" title="Do You Want To Approve It?" >Approve</a>
                                        {% endif %}
                                        {% if purchaseOrder.status == 1
                                        and purchaseOrder.approveStatus == 2
                                        and ((purchaseOrder.approvedTwo != null
                                        and purchaseOrder.approvedThree == null
                                        and is_granted("ROLE_PURCHASE_ORDER_APPROVE_THREE") )
                                        or (purchaseOrder.approvedTwo != null
                                        and purchaseOrder.approvedThree == null
                                        and is_granted("ROLE_SUPER_ADMIN"))) %}
                                            <a href="/purchase-order/approve-three/{{ purchaseOrder.id }}"
                                               class="btn blue btn-xs confirm displayForDesktop" title="Do You Want To Approve It?"  >Approve</a>
                                            <a href="/purchase-order/approve-three/{{ purchaseOrder.id }}"
                                               class="btn blue btn-xs confirm displayForDesktop" style="display: none;" title="Do You Want To Approve It?"  >Approve</a>
                                        {% endif %}

                                        {% if purchaseOrder.status == 5
                                        or purchaseOrder.status == 6
                                        or purchaseOrder.status == 7
                                        or purchaseOrder.status == 8
                                        or purchaseOrder.approveStatus == 3
                                        or purchaseOrder.approvedThree != null %}
                                            <a class="btn btn-xs displayForDesktop" style="background:#C0D0E9;color:#ffffff !important;">Approved</a>
                                            <a class="btn btn-xs displayForMob" style=" display:none;background:#C0D0E9;color:#ffffff !important;">Approved</a>
                                        {% endif %}

                                    </td>
                                    <td class="numeric">

                                        {% if (purchaseOrder.status == 1)
                                        and purchaseOrder.approveStatus < 3
                                        and (purchaseOrder.approvedOne == null
                                        or purchaseOrder.approvedTwo == null
                                        or purchaseOrder.approvedThree == null) %}
                                            {% if is_granted("ROLE_PURCHASE_ORDER_EDIT") or
                                                  is_granted("ROLE_PURCHASE_ORDER_APPROVE_ONE") or
                                                  is_granted("ROLE_PURCHASE_ORDER_APPROVE_TWO") or
                                                  is_granted("ROLE_ORDER_REQUISITION_APPROVE_THREE") or
                                                  is_granted("ROLE_SUPER_ADMIN") %}
                                                <a href="/purchase-order/edit/{{ purchaseOrder.id }}" style="color:#ffffff !important;" class="btn blue btn-xs displayForDesktop"><i
                                                            class="fa fa-edit"></i> Edit</a>
                                                <a href="/purchase-order/edit/{{ purchaseOrder.id }}" style=" display:none;color:#ffffff !important;" class="btn blue btn-xs displayForMob"><i
                                                            class="fa fa-edit"></i> Edit</a>
                                            {% endif %}
                                        {% endif %}

                                        {% if purchaseOrder.status == 5
                                        or purchaseOrder.status == 6
                                        or purchaseOrder.status == 7
                                        or purchaseOrder.status == 8
                                        or purchaseOrder.approveStatus == 3
                                        or purchaseOrder.approvedThree != null %}

                                                {% if is_granted("ROLE_SUPER_ADMIN") %}
                                                    <a href="/purchase-order/edit/{{ purchaseOrder.id }}" style="color:#ffffff !important;" class="btn blue btn-xs displayForDesktop"><i
                                                                class="fa fa-edit"></i> Edit</a>
                                                    <a href="/purchase-order/edit/{{ purchaseOrder.id }}" style=" display:none;color:#ffffff !important;" class="btn blue btn-xs displayForMob"><i
                                                                class="fa fa-edit"></i> Edit</a>
                                                    {% else %}
                                                        <a style="background: #DDDADA; color:#ffffff !important;" class="btn btn-xs displayForDesktop"><i
                                                                    class="fa fa-edit"></i> Edit</a>
                                                        <a style="display:none;background: #DDDADA; color:#ffffff !important;" class="btn btn-xs displayForMob"><i
                                                                    class="fa fa-edit"></i> Edit</a>

                                                        {% endif %}


                                        {% endif %}

